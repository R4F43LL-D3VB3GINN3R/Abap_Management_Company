*----------------------------------------------------------------------*
***INCLUDE Z001_AFTER_LOGINI01.
*----------------------------------------------------------------------*
*&---------------------------------------------------------------------*
*&      Module  AFTER_LOGIN  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE AFTER_LOGIN INPUT.

  DATA: LV_OK2 TYPE BOOL.
  LV_OK2 = 'FALSE'.

  CALL FUNCTION 'ZLOGIN001'
    EXPORTING
      IN_LOGIN100          = IN_LOGIN100
      IN_PASSWORD100       = IN_PASSWORD100
      OKCODE100            = OKCODE100
    IMPORTING
      LV_OK                = LV_OK2
            .

    IF LV_OK2 EQ 'X'.
      CALL SCREEN '200'.
      MESSAGE |'INVALID PASSWORD: | TYPE 'S' DISPLAY LIKE 'I'.
    ELSE.
      MESSAGE |'NAO FUNCIONA: | TYPE 'S' DISPLAY LIKE 'I'.
    ENDIF.

ENDMODULE.
